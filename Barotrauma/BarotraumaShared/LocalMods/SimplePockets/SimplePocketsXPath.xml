    <Items>
        <!-- Find all items in the source files with a clothing tag -->
        <Item tags="clothing" override="True">
            <!-- Predicates can be used to limit things further. In this case it will remove body armor -->
            <Predicates>
                <Predicate>//Wearable[contains(@slots,'InnerClothes')]</Predicate>
            </Predicates>
            <!-- Remove the ItemContainer tag from items that already have it. In this case the Medic clothing -->
            <Remove>
                <XPath>.//ItemContainer</XPath>
            </Remove>
            <!-- Add our new ItemContainer -->
            <Add>
                <XPath>.</XPath>
                <Value>
                    <ItemContainer capacity="3" maxstacksize="8" hideitems="true">
                        <StatusEffect type="OnContained" target="Character, This" setvalue="true" disabledeltatime="true" drawinventory="false" locked="true" />
                        <StatusEffect type="OnWearing" target="Character, This" setvalue="true" disabledeltatime="true" drawinventory="true" locked="false" />
                        <Containable items="smallitem" excludeditems="clothing,mobilecontainer,toolbelt,toolbox,bandolier" />
                    </ItemContainer>
                </Value>
            </Add>
            <!-- Insert simplepockts to the tags -->
            <InsertAttribute attribute="tags">
                <XPath>.</XPath>
                <Value>simplepockets</Value>
            </InsertAttribute>
            <!-- Fix the sprite paths to be mod compatible -->
